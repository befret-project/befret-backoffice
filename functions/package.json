{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "npm run build && firebase deploy --only functions --project befret-development",
    "deploy:acc": "npm run build && firebase deploy --only functions --project befret-acceptance",
    "deploy:prod": "npm run build && firebase deploy --only functions --project befret-production",
    "logs": "firebase functions:log",
    "logs:dev": "firebase functions:log --project befret-development",
    "logs:acc": "firebase functions:log --project befret-acceptance",
    "logs:prod": "firebase functions:log --project befret-production"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@zxing/library": "^0.21.3",
    "cors": "^2.8.5",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.0.1",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}
