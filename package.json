{
  "name": "befret-backoffice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:local": "env-cmd -f .env.local next dev --turbopack",
    "dev:acc": "env-cmd -f .env.acceptance next dev --turbopack",
    "build": "BUILD_EXPORT=true next build",
    "build:local": "BUILD_EXPORT=true env-cmd -f .env.local next build",
    "build:dev": "BUILD_EXPORT=true env-cmd -f .env.dev next build",
    "build:acc": "BUILD_EXPORT=true env-cmd -f .env.acceptance next build",
    "build:prod": "BUILD_EXPORT=true env-cmd -f .env.production next build",
    "deploy:local": "echo 'Cannot deploy local environment'",
    "deploy:dev": "npm run build:dev && firebase deploy --only hosting:backoffice --project befret-development",
    "deploy:acc": "npm run build:acc && firebase deploy --only hosting:backoffice --project befret-acceptance",
    "deploy:prod": "npm run build:prod && firebase deploy --only hosting:backoffice --project befret-production",
    "deploy:functions:dev": "cd functions && npm run deploy:dev",
    "deploy:functions:acc": "cd functions && npm run deploy:acc",
    "deploy:functions:prod": "cd functions && npm run deploy:prod",
    "deploy:all:dev": "npm run build:dev && cd functions && npm run deploy:dev && cd .. && firebase deploy --only hosting:backoffice --project befret-development",
    "deploy:all:acc": "npm run build:acc && cd functions && npm run deploy:acc && cd .. && firebase deploy --only hosting:backoffice --project befret-acceptance",
    "deploy:all:prod": "npm run build:prod && cd functions && npm run deploy:prod && cd .. && firebase deploy --only hosting:backoffice --project befret-production",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules",
    "restart": "npm run clean && npm install && npm run dev",
    "create-admin": "node scripts/create-admin-user.js"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@sendgrid/client": "^8.1.5",
    "@sendgrid/mail": "^8.1.5",
    "@types/cookie": "^0.6.0",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "lucide-react": "^0.517.0",
    "next": "15.3.4",
    "otplib": "^12.0.1",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.0.0",
    "react-zxing": "^2.1.0",
    "recharts": "^2.15.3",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "env-cmd": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "typescript": "^5"
  }
}
