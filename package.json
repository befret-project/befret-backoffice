{
  "name": "befret-backoffice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:staging": "NODE_ENV=staging next dev --turbopack",
    "build": "next build",
    "build:staging": "NODE_ENV=staging next build",
    "build:production": "NODE_ENV=production next build",
    "export": "BUILD_EXPORT=true next build",
    "export:dev": "BUILD_EXPORT=true next build",
    "deploy": "npm run export && firebase deploy --only hosting",
    "deploy:dev": "npm run export:dev && firebase deploy --only hosting --project befret-development",
    "deploy:functions": "cd functions && npm install && npm run build && cd .. && firebase deploy --only functions",
    "deploy:all": "npm run export && npm run deploy:functions && firebase deploy",
    "start": "next start",
    "start:staging": "NODE_ENV=staging next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "setup": "npm install && cp .env.example .env.local",
    "setup:dev": "echo 'Using .env.development'",
    "setup:staging": "cp .env.staging .env.local",
    "setup:prod": "cp .env.production .env.local",
    "clean": "rm -rf .next node_modules",
    "restart": "npm run clean && npm install && npm run dev",
    "create-admin": "node scripts/create-admin-user.js"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@sendgrid/client": "^8.1.5",
    "@sendgrid/mail": "^8.1.5",
    "@types/cookie": "^0.6.0",
    "@types/qrcode": "^1.5.5",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "lucide-react": "^0.517.0",
    "next": "15.3.4",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "typescript": "^5"
  }
}
